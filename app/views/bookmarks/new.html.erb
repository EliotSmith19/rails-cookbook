<div class="banner">
  <h1>Add a new recipe</h1>
</div>

<div class="container d-flex justify-content-end">
  <%= link_to "Back", categories_path, class: "button-grn" %>
</div>

<div class="container">
  <%= simple_form_for [@category, @bookmark] do |f| %>
    <%= f.association :recipe %>
    <%= f.input :comment %>
    <%= f.submit class: "button-grn" %>
  <% end %>
</div>
