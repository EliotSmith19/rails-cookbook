<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('Homebanner.jpeg') %>)">
  <h1>Create a new category</h1>
</div>

<div class="container d-flex justify-content-end">
  <%= link_to "Back", categories_path, class: "button-grn" %>
</div>

<div class="container">
  <%= simple_form_for(@category) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: "button-grn"%>
  <% end %>
</div>
<hr class="container">
