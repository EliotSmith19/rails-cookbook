<div class="banner">
  <h1>Create a new category</h1>
</div>

<div class="container d-flex justify-content-end">
  <%= link_to "Back", categories_path, class: "button-grn" %>
</div>

<div class="container">
  <%= simple_form_for(@category) do |f| %>
